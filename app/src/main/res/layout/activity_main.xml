<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

    <TextView

        android:layout_gravity="center"
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        />

    <Button
        android:layout_gravity="center"
        android:text="@string/app1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_marginTop="20dp"
        android:background="#F08C35"
        android:width="240dp"
        android:onClick="launchApp1" />

    <Button
        android:layout_gravity="center"
        android:text="@string/app2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginTop="20dp"
        android:background="#F08C35"
        android:width="240dp"
        android:onClick="launchApp2"/>

    <Button
        android:layout_gravity="center"
        android:text="@string/app3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginTop="20dp"
        android:background="#F08C35"
        android:width="240dp"
        android:onClick="launchApp3"/>

    <Button
        android:layout_gravity="center"
        android:text="@string/app4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_marginTop="20dp"
        android:background="#F08C35"
        android:width="240dp"
        android:onClick="launchApp4"/>

    <Button
        android:layout_gravity="center"
        android:text="@string/app5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_marginTop="20dp"
        android:background="#F08C35"
        android:width="240dp"
        android:onClick="launchApp5"/>

    <Button
        android:layout_gravity="center"
        android:text="@string/app6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_marginTop="20dp"
        android:background="#BE0030"
        android:width="240dp"
        android:clickable="true"
        android:onClick="launchApp6"/>
    </LinearLayout>

    </ScrollView>

</RelativeLayout>
